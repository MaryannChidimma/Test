{
  "compilerOptions": {
    "module": "NodeNext", // Use "ESNext" or "ES2022" for ES Modules
    "moduleResolution": "NodeNext", // Use "NodeNext" for Node.js compatibility
    "target": "ES2022", // Set your target JavaScript version
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Source directory for TypeScript files
    "esModuleInterop": true, // Enable ES Module interop
    "resolveJsonModule": true,
    "strict": true // Enable strict type-checking
  },
  "include": ["src/**/*"],// Include all files in the src directory
  "exclude": ["dist", "node_modules"]
}

